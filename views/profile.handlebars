{{!-- When a customer logs in they're presented with their profile --}}

<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

 <div class="calendly-inline-widget" data-url="https://calendly.com/backendboyzconstruction/estimates?hide_event_type_details=1" style="min-width:320px;height:630px;"></div>
  <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>

<div>
    <h3>Your past projects</h3>
    <p>{{name.project.date}}</p>
    <p>{{project.id.description}}</p>
</div>
  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4 wrapper">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">CANCEL</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>